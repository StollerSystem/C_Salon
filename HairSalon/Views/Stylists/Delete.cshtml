@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="mainBox">
  <h2>Are you sure you want to delete stylist <strong>@Html.DisplayFor(model => model.Name)</strong>?</h2>
  <hr />
  @* @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name) *@
  @using (Html.BeginForm())
  {
      <input type="submit" value="Delete!" class="delete" />
  }
  @Html.ActionLink("Back to stylists", "Index",null,null, new { @class = "btn btn-info btn-large" })
</div>