@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Stylists</h2>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add new Stylist", "Create", null,null, new { @class = "btn btn-info btn-large" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-info btn-large" })</p>