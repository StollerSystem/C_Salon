@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="mainBox">
  <h2>Stylists</h2>
  <hr />
  <h4>@ViewBag.filterName</h4>
  <div class="lists">
    <ul>
      @if (@Model.Count == 0)
      {
        <li><strong>No stylists found</strong></li>
      } 
      @foreach (Stylist stylist in Model)
      {
        <li><strong>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId }) </strong>| @stylist.Specialty</li>
      }
    </ul>
  </div>
  @using (Html.BeginForm())
  {  
    <label for="Name">Filter by name:</label>
    <input type="text" id="Name" name="name" required> 
    <input type="submit" value="Filter" class="btn btn-info btn-sm"/> 
    @Html.ActionLink("Show all Stylists", "Index", null, null, new { @class = "btn btn-info btn-sm" })
  }
  <p>@Html.ActionLink("Add new Stylist", "Create", null,null, new { @class = "btn btn-info btn-large" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>