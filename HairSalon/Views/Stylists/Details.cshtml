@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<h4>Clients:</h4>
<ul>  
@if (@Model.Clients.Count == 0)
{
  <p>no clients found</p>
}

@foreach (Client client in @Model.Clients)
{
  <li>Name: @client.Name</li>
}
</ul>

<p>@Html.ActionLink("Back to stylists", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
<p>@Html.ActionLink("Edit Stylist", "Edit",null, new { id = Model.StylistId }, new { @class = "btn btn-info btn-sm" })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete",null, new { id = Model.StylistId }, new { @class = "btn btn-info btn-sm" })</p>