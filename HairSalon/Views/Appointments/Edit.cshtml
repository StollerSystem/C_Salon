@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment

<div class="mainBox">
  <h2>Edit Appointment</h2>
  <hr />
  <h4>Edit this Appointment @Html.DisplayFor(model => model.Name)</h4>
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.AppointmentId)

      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, 
      new {@required="required"})

      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")

      <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to list", "Index",null,null, new { @class = "btn btn-info btn-large" })</p>
</div>