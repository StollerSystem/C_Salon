<div class="mainBox">
  <h2>Appointments</h2>
  <hr />
  
  <div class="lists">
    <ul >
      @if (@Model.Count == 0)
      {
        <li><strong>No Appointments found</strong></li>
      } 
      @foreach (Appointment Appointment in Model)
      {
        <li><strong>@Html.ActionLink($"{Appointment.Title}", "Details", new { id = Appointment.AppointmentId }) </strong>| Stylist: @Appointment.Stylist.Name | Client: @Appointment.Client.Name</li>
      }
    </ul>
