@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="mainBox">
  <h2>Clients</h2>
  <h4>@ViewBag.filterName</h4>
  @if (@Model.Count == 0)
  {
    <h3>No clients found</h3>
  } 
  <div class="lists">
    <ul >
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | Stylist: @client.Stylist.Name</li>
    }
    </ul>
  </div>
  @using (Html.BeginForm())
  {  
    <label for="Name">Filter by name:</label>
    <input type="text" id="Name" name="name" required> 
    <input type="submit" value="Filter" class="btn btn-info btn-sm"/> 
  }
  <p>@Html.ActionLink("Show all Clients", "Index", null, null, new { @class = "btn btn-info btn-sm" })</p>
  <p>@Html.ActionLink("Add new Client", "Create", null, null, new { @class = "btn btn-info btn-large" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-info btn-sm" })</p>
</div>
