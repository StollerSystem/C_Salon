@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="mainBox">
  <h2>Clients</h2>
  <hr />
  <h4>@ViewBag.filterName</h4>
  <div class="lists">
    <ul >
      @if (@Model.Count == 0)
      {
        <li><strong>No clients found</strong></li>
      } 
      @foreach (Client client in Model)
      {
        <li><strong>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </strong>| Stylist: @client.Stylist.Name</li>
      }
    </ul>
  </div>
  @using (Html.BeginForm())
  {  
    <label for="Name">Filter by name:</label>
    <input type="text" id="Name" name="name" required> 
    <input type="submit" value="Filter" class="btn btn-info btn-sm"/> 
    @Html.ActionLink("Show all Clients", "Index", null, null, new { @class = "btn btn-info btn-sm" })
  }
  <p>@Html.ActionLink("Add new Client", "Create", null, null, new { @class = "btn btn-info btn-large" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
