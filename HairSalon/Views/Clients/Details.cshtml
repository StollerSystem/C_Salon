@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="mainBox">
  <h2>Client Details</h2>
  <hr />
  <h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
  <h4>Stylist Name: @Html.DisplayFor(model => model.Stylist.Name)</h4>
  <h4>Stylist Specialty: @Html.DisplayFor(model => model.Stylist.Specialty)</h4>
  <p>@Html.ActionLink("Edit Client", "Edit", null, new { id = Model.ClientId }, new { @class = "btn btn-info btn-sm" })</p>
  <p>@Html.ActionLink("Delete Client", "Delete", null, new { id = Model.ClientId }, new { @class = "btn btn-info btn-sm" })</p>
  <p>@Html.ActionLink("Back to list", "Index",null, null, new { @class = "btn btn-info btn-sm" })</p>
</div>